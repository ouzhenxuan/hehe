<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_setupSql"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="生成数据库 " />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/ed_userName"
                android:layout_below="@+id/btn_setupSql"
                android:layout_marginRight="21dp"
                android:text="version："
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/versionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <Button
                android:id="@+id/btn_udDataSql"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_setupSql"
                android:layout_marginTop="38dp"
                android:text="更新数据库" />

            <EditText
                android:id="@+id/ed_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_udDataSql"
                android:ems="10"
                android:hint="name"
                android:width="150dp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/ed_telnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ed_userName"
                android:layout_alignBottom="@+id/ed_userName"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="电话号码"
                android:width="150dp" />

            <Button
                android:id="@+id/btn_insterData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ed_userName"
                android:text="插入数据" />

            <EditText
                android:id="@+id/ed_new_updata_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_insterData"
                android:ems="10"
                android:hint="要更新的name"
                android:width="150dp" />

            <EditText
                android:id="@+id/ed_new_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ed_telnum"
                android:layout_below="@+id/btn_insterData"
                android:ems="10"
                android:hint="新的phone"
                android:width="150dp" />

            
			<Button
                android:id="@+id/btn_updata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_new_updata_name"
                android:layout_centerHorizontal="true"
                android:text="更新" />
            
  
            <EditText
                android:id="@+id/ed_oldname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_updata"
                android:ems="10"
                android:hint="oldName" />
            
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ed_oldname"
                android:text="删除数据" />

            

            
            
            <Button
                android:id="@+id/btn_lookSql"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_delete"
                android:text="查看数据库" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>